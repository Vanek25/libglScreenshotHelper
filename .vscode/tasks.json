{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ сборка активного файла",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/libglScreenshotHelper/src/main.cpp",
                "${workspaceFolder}/libglScreenshotHelper/src/libglScreenshotHelper.a",
                "${workspaceFolder}/libglScreenshotHelperTests/glScreenshotHelperTest.cpp",
                //"${workspaceFolder}/libglScreenshotHelperTests/main.cpp",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "-lGL",
                "-lGLU",
                "-lX11",
                "-lglfw",
                "-lXrandr",
                "-lpthread",
                "-lXi",
                "-lfreeimage",
                "-lcppunit"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}